{{!-- template that Handlebars can render onto --}}
<div class="container">
    <div class="header"><h1>Eat-Da-Burger</h1></div>

    <div class="row">
        <div class="col-6">
            {{!-- pass in data with handlebars --}}
            <h3>Burgers waiting to be eaten</h3>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>{{burger_name}}</li>
                <button class="devour" id="{{id}}">Devour</button>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h3>Devoured burgers</h3>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    {{!-- button that submits the user input into database --}}

    <h2>Add a burger</h2>
    <form id="create-form">
        <div class="form-group">
            <label for="auth">Burger description:</label>
            <input type="text" id="burgerEntry" name="burger">
        </div>
        <button type="submit">Submit burger</button>
    </form>

</div>